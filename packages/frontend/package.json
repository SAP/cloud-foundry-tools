{
  "name": "cloud-foundry-tools-frontend",
  "displayName": "Cloud Foundry Tools Sign Frontend",
  "version": "7.3.3",
  "private": true,
  "description": "Frontend for the cf sign-in",
  "license": "Apache 2.0",
  "publisher": "SAP",
  "scripts": {
    "ci": "npm-run-all clean build coverage",
    "ci:artifacts_only": "npm-run-all clean build",
    "clean": "rimraf ./dist ./coverage",
    "build": "vue-cli-service build",
    "build-dev": "vue-cli-service build --mode development",
    "test": "vue-cli-service test:unit --colors",
    "coverage": "nyc vue-cli-service test:unit --colors",
    "serve": "vue-cli-service serve"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "coverageReporters": [
      "json"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "vue/attribute-hyphenation": "off"
    },
    "root": true
  },
  "dependencies": {
    "@mdi/font": "5.9.55",
    "@mdi/js": "^7.2.96",
    "@sap-devx/webview-rpc": "0.3.1",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "core-js": "3.6.5",
    "vue": "3.3.4",
    "vue-loading-overlay": "3.3.0",
    "vue-mdijs": "^0.5.12"
  },
  "devDependencies": {
    "@babel/preset-env": "7.11.5",
    "@vscode/codicons": "^0.0.30",
    "@vue/cli-plugin-babel": "4.5.4",
    "@vue/cli-plugin-unit-jest": "4.5.4",
    "@vue/cli-service": "4.5.4",
    "@vue/compiler-sfc": "3.3.4",
    "@vue/test-utils": "1.0.5",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.9.0",
    "eslint-plugin-vue": "9.14.1",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "mock-socket": "^9.0.2",
    "sass": "1.56.1",
    "sass-loader": "13.2.0",
    "vue-jest": "3.0.6"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
