{
  "name": "cloud-foundry-tools-frontend",
  "displayName": "Cloud Foundry Tools Sign Frontend",
  "version": "7.3.4",
  "private": true,
  "description": "Frontend for the cf sign-in",
  "license": "Apache 2.0",
  "publisher": "SAP",
  "scripts": {
    "ci": "npm-run-all clean build coverage coverage:copy",
    "ci:artifacts_only": "npm-run-all clean build",
    "clean": "rimraf ./dist ./coverage",
    "build": "vue-cli-service build",
    "build-dev": "vue-cli-service build --mode development",
    "coverage:copy": "shx mkdir -p ../../coverage && shx cp -u ./coverage/lcov.info ../../coverage/lcov_frontend.info",
    "coverage": "vue-cli-service test:unit --colors --coverage",
    "serve": "vue-cli-service serve"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "vue/attribute-hyphenation": "off"
    },
    "root": true
  },
  "dependencies": {
    "@mdi/font": "5.9.55",
    "@mdi/js": "^7.2.96",
    "@sap-devx/webview-rpc": "0.3.1",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "core-js": "3.6.5",
    "vue": "3.3.4",
    "vue-loading-overlay": "3.3.0",
    "vue-mdijs": "^0.5.12"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "7.11.5",
    "@testing-library/jest-dom": "^6.1.3",
    "@vscode/codicons": "^0.0.30",
    "@vue/cli-plugin-babel": "5.0.8",
    "@vue/cli-plugin-unit-jest": "5.0.8",
    "@vue/cli-service": "4.5.4",
    "@vue/compiler-sfc": "3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/vue3-jest": "29.2.6",
    "babel-eslint": "^10.0.1",
    "babel-jest": "29.7.0",
    "eslint-plugin-vue": "9.14.1",
    "jest": "29.7.0",
    "jest-serializer-vue": "^2.0.2",
    "jsdom": "^22.1.0",
    "mock-socket": "^9.0.2",
    "sass": "1.56.1",
    "sass-loader": "13.2.0",
    "ts-jest": "^29.1.1"
  }
}
