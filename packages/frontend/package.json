{
  "name": "cloud-foundry-tools-frontend",
  "displayName": "Cloud Foundry Tools Sign Frontend",
  "version": "7.3.4",
  "private": true,
  "description": "Frontend for the cf sign-in",
  "license": "Apache 2.0",
  "publisher": "SAP",
  "scripts": {
    "ci": "npm-run-all clean build coverage",
    "ci:artifacts_only": "npm-run-all clean build",
    "clean": "rimraf ./dist ./coverage",
    "dev": "vite",
    "build": "vite build",
    "build-dev": "vite build --mode development",
    "test": "jest -w 1 --colors",
    "coverage": "nyc jest -w 1 --colors",
    "serve": "vite preview"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true,
      "es2022": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "vue/attribute-hyphenation": "off"
    },
    "root": true
  },
  "dependencies": {
    "@sap-devx/webview-rpc": "0.4.1",
    "@vscode/webview-ui-toolkit": "1.2.2",
    "vue": "3.3.4",
    "vue-loading-overlay": "6.0.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "4.3.4",
    "@vue/compiler-sfc": "3.3.4",
    "@vue/test-utils": "2.4.1",
    "@vue/vue3-jest": "29.2.6",
    "eslint-plugin-vue": "9.17.0",
    "jest": "29.7.0",
    "sass": "1.68.0",
    "ts-jest": "29.1.1",
    "vite": "4.4.9"
  }
}
